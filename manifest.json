{
    "name": "Readee",
    "version": "0.5.3",
    "description": "A 3D Renderer designed to enhacne reading comprehension.",
    "manifest_version": 3,
    "author": "Team IHAT",
    "permissions": [
        "activeTab",
        "scripting",
        "webNavigation",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "extension/script.js",
                "src/js/echo.js",
                "src/js/gpt.js",
                "src/js/import/jquery.min.js",
                "src/js/import/Echo3DAPI.js"
            ],
            "css": [
                "extension/style.css",
                "src/css/echoview.css"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "extension/index.html",
                "popup.html",
                "src/js/popup.js",
                "extension/style.css",
                "extension/script.js",
                "3DData.json",
                "src/js/import/model-viewer.min.js"      
            ],
            "matches": [
                "<all_urls>"
            ],
            "extension_ids": [
                "*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}